                      <bgColor
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Adjust the background color of this component."
                      fieldLabel="Background color"
                      name="./bgColor">
                        <items jcr:primaryType="nt:unstructured">
                          <transparent
                            jcr:primaryType="nt:unstructured"
                            text="Transparent (no bg)"
                            value="theme-none"/>
                          <purple
                            jcr:primaryType="nt:unstructured"
                            text="Purple"
                            value="theme-purple theme-dark"/>
                          <purpleGradient
                            jcr:primaryType="nt:unstructured"
                            text="Purple Gradient"
                            value="theme-purple-gradient theme-dark"
                            selected="{Boolean}true"/>
                          <salmonGradient
                            jcr:primaryType="nt:unstructured"
                            text="Salmon Gradient"
                            value="theme-salmon-gradient theme-dark"/>
                          <magentaGradient
                            jcr:primaryType="nt:unstructured"
                            text="Magenta Gradient"
                            value="theme-magenta-gradient theme-dark"/>
                          <black
                            jcr:primaryType="nt:unstructured"
                            text="Black"
                            value="theme-black theme-dark"/>
                          <darkGrey
                            jcr:primaryType="nt:unstructured"
                            text="Dark Grey"
                            value="theme-dark-grey theme-dark"/>
                          <lightGrey
                            jcr:primaryType="nt:unstructured"
                            text="Light Grey"
                            value="theme-light-grey theme-light"/>
                          <white
                            jcr:primaryType="nt:unstructured"
                            text="White"
                            value="theme-white theme-light"/>
                        </items>
                      </bgColor>
                    </items>
                  </column>
                </items>
              </columns>
            </items>
          </styleOptions>
          <CTAOptions
            jcr:primaryType="nt:unstructured"
            jcr:title="CTA Options"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
              <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                  <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                     <ctaOptions
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Select CTA Options"
                      fieldLabel="CTA Options"
                      name="./ctaOption">
                        <items jcr:primaryType="nt:unstructured">
                          <transparent
                            jcr:primaryType="nt:unstructured"
                            text="No CTA"
                            value="no-cta"/>
                          <purple
                            jcr:primaryType="nt:unstructured"
                            text="Text CTA"
                            value="text-cta"/>
                          <purpleGradient
                            jcr:primaryType="nt:unstructured"
                            text="Button CTA"
                            value="button-cta"
                            selected="{Boolean}true"/>
                        </items>
                      </ctaOptions>
                        <cta jcr:primaryType="nt:unstructured"
						  sling:resourceType="granite/ui/components/foundation/include"
						  path="/apps/vonage/components/utils/cta/cta_dialog" />
                    </items>
                  </column>
                </items>
              </columns>
            </items>
          </CTAOptions>
        </items>
      </tabs>
    </items>
  </content>
</jcr:root>
