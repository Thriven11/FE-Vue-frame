<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/vonage/settings/wcm/templates/article-page"
        contentCategory="vonage:content-type/article"
        jcr:primaryType="cq:PageContent"
        sling:resourceType="vonage/components/structure/article-page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <generalcontainer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="vonage/components/structure/generalContainer">
                <responsiveGrid
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/responsivegrid">
                    <headermediacontainer
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="vonage/components/content/headerMediaContainer"/>
                    <responsivegrid
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/foundation/components/responsivegrid"/>
                </responsiveGrid>
            </generalcontainer>
        </root>
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <phone
                    jcr:primaryType="nt:unstructured"
                    title="Smaller Screen"
                    width="{Long}650"/>
                <tablet
                    jcr:primaryType="nt:unstructured"
                    title="Tablet"
                    width="{Long}1200"/>
            </breakpoints>
        </cq:responsive>
        <image jcr:primaryType="nt:unstructured"
               fileReference="/content/dam/vonage/us-en/resources/iconography/resources_articles.png"/>
    </jcr:content>
</jcr:root>
